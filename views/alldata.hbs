{{!-- allData.hbs --}}
{{> header}}
<div class="content">
    <h1>All Sales Data</h1>
    <table>
        <thead>
            <tr>
                <th>InvoiceNo</th>
                <th>Manufacturer</th>
                <th>Class</th>
                <th>Sales in Thousands</th>
                <th>Price in Thousands</th>
            </tr>
        </thead>
        <tbody>
            {{#each cars}}
            <tr>
                <td>{{this.InvoiceNo}}</td>
                <td>{{this.Manufacturer}}</td>
                <td>{{classify this.class}}</td> <!-- This uses the classify helper -->
                <td>{{this.Sales_in_thousands}}</td>
                <td>{{this.Price_in_thousands}}</td>
                <!-- Add other data columns as needed -->
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>

